<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:left="10dp"
      android:height="20dp"
      android:width="20dp">
    <rotate
        android:fromDegrees="45"
        android:toDegrees="45">
      <shape android:shape="rectangle" >
        <solid android:color="@color/blue_bg_color" />
        <stroke android:color="@color/white"
            android:width="1dp"/>
      </shape>
    </rotate>
  </item>
  <item android:top="2dp"
      android:left="0dp"
      android:height="25dp"
      android:width="40dp">
    <shape android:shape="rectangle">
      <solid android:color="@color/blue_bg_color"/>
      <stroke android:color="@color/white"
          android:width="1dp"/>
      <corners android:radius="4dp"/>
    </shape>
  </item>

  <item android:left="12dp"
      android:height="18dp"
      android:width="22dp">
    <rotate
        android:fromDegrees="45"
        android:toDegrees="45">
      <shape android:shape="rectangle" >
        <solid android:color="@color/blue_bg_color" />
        <stroke android:color="@color/blue_bg_color"
            android:width="1dp"/>
      </shape>
    </rotate>
  </item>

</layer-list>